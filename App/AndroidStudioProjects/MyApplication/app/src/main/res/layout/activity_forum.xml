<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddPlantMenuActivity">

    <include
        android:id="@+id/forumToolbar"
        layout="@layout/back_screen_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toolbar_drop_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/forumToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forumToolbar" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_navigation_bar"
                app:layout_constraintBottom_toTopOf="@+id/viewPagerMyFriends"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_tabs"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_navigation_bar_vertical"
                app:layout_constraintBottom_toTopOf="@+id/viewPagerMyFriends"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/id_tabs"
                app:layout_constraintTop_toTopOf="@+id/id_tabs"
                app:layout_constraintVertical_bias="0.0" />

    <com.example.joelruhe.myapplication.CustomViewPager
        android:id="@+id/viewPagerForum"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <android.support.design.widget.TabLayout
        android:id="@+id/id_tabs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerMyFriends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115">

    </android.support.design.widget.TabLayout>
</android.support.constraint.ConstraintLayout>