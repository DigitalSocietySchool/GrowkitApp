                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/likes2"
                    android:layout_width="93dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_text_view_opacity_red"
                    android:paddingLeft="50dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorDarkRed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView10"
                    app:layout_constraintHorizontal_bias="0.952"
                    app:layout_constraintStart_toStartOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="@+id/imageView10"
                    app:layout_constraintVertical_bias="0.951"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/like_icon2"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_favorite_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/likes2"
                    app:layout_constraintEnd_toEndOf="@+id/likes2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/likes2"
                    app:layout_constraintTop_toTopOf="@+id/likes2"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="48dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/colorDarkRed"
                    app:layout_constraintBottom_toBottomOf="@+id/likes2"
                    app:layout_constraintEnd_toEndOf="@+id/likes2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/likes2"
                    app:layout_constraintTop_toTopOf="@+id/likes2"
                    app:layout_constraintVertical_bias="1.0" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="330dp">

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="262dp"
                    android:layout_height="49dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
